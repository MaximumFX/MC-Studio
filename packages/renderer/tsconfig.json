{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": false,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true,
		"jsx": "preserve",

		"types" : ["node"],
		"baseUrl": ".",
		"paths": {
			"#preload": ["../preload/src/index"],
			"#type/*": ["../main/type/*"],
			"#main/*": ["../main/src/*"],
			"@/*": ["./src/*"]
		},
		"lib": ["ESNext", "dom", "dom.iterable"]
	},

	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/**/*.d.ts",
		"../../types/**/*.d.ts",
	],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts",
	]
}
