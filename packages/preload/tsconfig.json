{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": false,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true,

		"types" : ["node"],

		"baseUrl": ".",
		"paths": {
			"#main/*": ["../main/src/*"],
			"#type/*": ["../main/type/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"../../types/**/*.d.ts"
	],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
